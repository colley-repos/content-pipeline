generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  
  // Connection pooling configuration
  relationMode = "prisma"
}

// Database connection pool settings (configure in DATABASE_URL)
// Example: postgresql://user:pass@host:5432/db?connection_limit=20&pool_timeout=10

enum Role {
  USER
  ADMIN
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  TRIALING
  INCOMPLETE
}

enum ContentType {
  SOCIAL_POST
  CAPTION
  SCRIPT
  BIO
  REPLY
  CONTENT_CALENDAR
}

model User {
  id                    String    @id @default(cuid())
  name                  String?
  email                 String    @unique
  emailVerified         DateTime?
  password              String?
  image                 String?
  role                  Role      @default(USER)
  freeCreditsRemaining  Int       @default(3)
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  subscription  Subscription?
  contents      Content[]
  analytics     Analytics[]
  socialAccounts SocialAccount[]
  userProfile   UserProfile?
  videoEdits    VideoEdit[]
  editingHistory EditingHistory[]

  // Performance indexes
  @@index([email])
  @@index([createdAt])
  @@index([role])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Subscription {
  id                   String             @id @default(cuid())
  userId               String             @unique
  stripeCustomerId     String             @unique
  stripeSubscriptionId String?            @unique
  stripePriceId        String?
  status               SubscriptionStatus @default(INCOMPLETE)
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean            @default(false)
  plan                 String?            // 'creator' or 'pro_creator'
  contentMinutesLimit  Int                @default(0) // Minutes of content allowed per billing period
  contentMinutesUsed   Int                @default(0) // Minutes of content used this period
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([stripeCustomerId])
  @@index([stripeSubscriptionId])
}

model Content {
  id                  String      @id @default(cuid())
  userId              String
  type                ContentType
  prompt              String      @db.Text
  output              String      @db.Text
  shareToken          String?     @unique
  shared              Boolean     @default(false)
  metadata            Json?
  estimatedSeconds    Int         @default(0) // Estimated content duration in seconds
  computeSeconds      Int         @default(0) // GPU compute time in seconds
  gpuProvider         String?     // GPU provider used (runpod, vastai, selfhosted, etc.)
  costUsd             Float       @default(0) // Actual cost in USD
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  publications Publication[]
  videoEdits VideoEdit[]

  @@index([userId])
  @@index([shareToken])
  @@index([createdAt])
  @@index([costUsd]) // For cost analysis queries
  @@index([gpuProvider]) // For provider cost analysis
}

model Analytics {
  id        String   @id @default(cuid())
  userId    String
  event     String
  metadata  Json?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([event])
  @@index([createdAt])
}

model SystemLog {
  id        String   @id @default(cuid())
  level     String
  message   String   @db.Text
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([level])
  @@index([createdAt])
}

model CostReport {
  id                    String   @id @default(cuid())
  reportDate            DateTime @unique // Date for the report period
  totalRevenue          Float    // Total subscription revenue for the period
  totalCost             Float    // Total OpenAI API costs for the period
  netProfit             Float    // Revenue - Cost
  profitMargin          Float    // (NetProfit / Revenue) * 100
  totalGenerations      Int      // Number of content generations
  averageCostPerGen     Float    // Average cost per generation
  activeSubscriptions   Int      // Number of active subscriptions
  freeGenerations       Int      // Number of free tier generations
  metadata              Json?    // Additional metrics
  createdAt             DateTime @default(now())

  @@index([reportDate])
  @@index([profitMargin])
}

// Social Media Integrations
model SocialAccount {
  id                String   @id @default(cuid())
  userId            String
  platform          String   // tiktok, instagram
  platformUserId    String
  platformUsername  String?
  accessToken       String   @db.Text
  refreshToken      String?  @db.Text
  tokenExpiresAt    DateTime?
  scopes            String[] // permissions granted
  isActive          Boolean  @default(true)
  metadata          Json?    // platform-specific data
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  publications Publication[]

  @@unique([userId, platform])
  @@index([userId])
  @@index([platform])
  @@index([isActive])
}

// Published Content Tracking
model Publication {
  id                String   @id @default(cuid())
  contentId         String
  socialAccountId   String
  platform          String   // tiktok, instagram
  platformPostId    String?  // post ID from platform
  status            String   @default("pending") // pending, published, failed
  caption           String?  @db.Text
  videoUrl          String?
  publishedAt       DateTime?
  failureReason     String?
  
  // Engagement metrics (updated periodically)
  views             Int      @default(0)
  likes             Int      @default(0)
  comments          Int      @default(0)
  shares            Int      @default(0)
  lastSyncedAt      DateTime?
  
  metadata          Json?    // platform-specific metadata
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  content       Content       @relation(fields: [contentId], references: [id], onDelete: Cascade)
  socialAccount SocialAccount @relation(fields: [socialAccountId], references: [id], onDelete: Cascade)

  @@unique([contentId, socialAccountId])
  @@index([contentId])
  @@index([platform])
  @@index([status])
  @@index([publishedAt])
}

// User Profile & Preferences for AI recommendations
model UserProfile {
  id                String   @id @default(cuid())
  userId            String   @unique
  creatorType       String?  // food, fashion, travel, cars, rave, cosplay, etc.
  preferredVibes    String[] // energetic, chill, professional, funny, dramatic
  editingStyle      Json?    // preferred editing patterns (jump cut frequency, music volume, etc.)
  soundPreferences  Json?    // favorite sound effects, music genres
  colorGrading      String?  // preferred color grading style
  metadata          Json?    // additional preferences
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([creatorType])
}

// Video Editing Presets (Vibe-based templates)
model EditingPreset {
  id                String   @id @default(cuid())
  name              String   @unique // "Energetic", "Chill Vibes", "Professional", etc.
  description       String?
  vibeCategory      String   // energetic, chill, professional, funny, dramatic
  creatorTypes      String[] // which creator types this vibe suits
  jumpCutFrequency  Float    @default(0) // cuts per minute (0 = none, 10 = very frequent)
  transitionStyle   String?  // fade, cut, zoom, slide
  musicTempo        String?  // upbeat, medium, slow
  soundEffects      String[] // array of sound effect IDs to include
  colorFilter       String?  // filter/grading preset name
  textStyle         Json?    // caption/text overlay styles
  isPublic          Boolean  @default(true)
  usageCount        Int      @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  videoEdits VideoEdit[]

  @@index([vibeCategory])
  @@index([isPublic])
  @@index([usageCount])
}

// Video Edit Records (tracks edits applied to content)
model VideoEdit {
  id                String   @id @default(cuid())
  contentId         String
  userId            String
  presetId          String?  // if using a preset
  status            String   @default("draft") // draft, processing, completed, failed
  originalVideoUrl  String?  @db.Text
  editedVideoUrl    String?  @db.Text
  editOperations    Json     // detailed edit operations (cuts, overlays, effects)
  renderProgress    Int      @default(0) // 0-100%
  processingTime    Int      @default(0) // seconds
  approved          Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  content Content @relation(fields: [contentId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  preset EditingPreset? @relation(fields: [presetId], references: [id])

  @@index([contentId])
  @@index([userId])
  @@index([presetId])
  @@index([status])
  @@index([approved])
}

// Sound Assets Library (royalty-free music & effects)
model SoundAsset {
  id              String   @id @default(cuid())
  name            String
  description     String?
  category        String   // music, sound_effect, voice_over
  vibe            String[] // energetic, chill, funny, dramatic, professional
  fileUrl         String   @db.Text
  duration        Int      // seconds
  waveformUrl     String?  @db.Text // visual waveform for preview
  tags            String[] // searchable tags
  bpm             Int?     // beats per minute (for music)
  isRoyaltyFree   Boolean  @default(true)
  usageCount      Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([category])
  @@index([vibe])
  @@index([isRoyaltyFree])
  @@index([usageCount])
}

// User Editing History for ML/preference learning
model EditingHistory {
  id                String   @id @default(cuid())
  userId            String
  videoEditId       String
  action            String   // preset_applied, manual_edit, approved, rejected
  presetUsed        String?  // preset name
  manualAdjustments Json?    // what they changed from preset
  approved          Boolean  // did they approve this style?
  timestamp         DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([action])
  @@index([approved])
  @@index([timestamp])
}

model WebhookEvent {
  id               String   @id @default(cuid())
  stripeEventId    String   @unique
  type             String
  processed        Boolean  @default(false)
  processedAt      DateTime?
  eventTimestamp   DateTime
  metadata         Json?
  createdAt        DateTime @default(now())

  @@index([stripeEventId])
  @@index([processed])
  @@index([createdAt])
}
